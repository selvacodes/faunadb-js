{
  "compilerOptions": {
    "target": "es6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "examples",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
